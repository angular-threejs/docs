---
import { getCompatMatrix, type CombinedEntry } from '../../data/package-deps';

const matrix = await getCompatMatrix();
const combined = matrix.combined;
---

<table class="compat-table">
	<thead>
		<tr>
			<th><a href="https://github.com/angular-threejs/angular-three" target="_blank" rel="noopener">Angular Three</a></th>
			<th><a href="https://threejs.org" target="_blank" rel="noopener">Three.js</a></th>
			<th><a href="https://angular.dev" target="_blank" rel="noopener">Angular</a></th>
			<th><a href="https://ngxtension.dev" target="_blank" rel="noopener">ngxtension</a></th>
		</tr>
	</thead>
	<tbody>
		{
			combined.map((entry: CombinedEntry) => (
				<tr>
					<td><code>{entry.angularThree}</code></td>
					<td><code>{entry.three}</code></td>
					<td><code>{entry.angular}</code></td>
					<td><code>{entry.ngxtension}</code></td>
				</tr>
			))
		}
	</tbody>
</table>

<style>
	.compat-table {
		width: 100%;
		border-collapse: collapse;
	}
	.compat-table th,
	.compat-table td {
		border: 1px solid var(--sl-color-gray-5);
		padding: 0.5rem 0.75rem;
	}
	.compat-table th {
		background: var(--sl-color-gray-6);
		text-align: left;
	}
	.compat-table th a {
		color: var(--sl-color-text-accent);
		text-decoration: none;
	}
	.compat-table th a:hover {
		text-decoration: underline;
	}
	.compat-table tr:nth-child(even) {
		background: var(--sl-color-gray-7);
	}
</style>
